{
  "compilerOptions": {
    /* General Options */
    "incremental": true,
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Decorators */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Type Definitions */
    "types": ["node", "jest"],

    /* Additional Checks */
    "strictNullChecks": true,

    /* Path Aliases */
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["*"],
      "@domain/*": ["domain/*"],
      "@shared/*": ["domain/@shared/*"],
      "@product/*": ["domain/product/*"]
    },

    /* Libraries */
    "lib": ["es2020", "dom"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
